<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.showcon.boot.mapper.UserDao">

    <sql id="columns">
        id, age, name
    </sql>


    <select id="getAllUserCondition" resultType="cn.showcon.boot.entity.User">
        SELECT
        <include refid="columns"/>
        FROM user
        <where>
            <if test="username!=null">
                and username=${username}
            </if>
            <if test="id!=null">
                and id=#{id}
            </if>
        </where>
    </select>

    <select id="getUserById" resultType="cn.showcon.boot.entity.User">
        select
        <include refid="columns"/>
        FROM user
        where id = #{id}
    </select>
</mapper>